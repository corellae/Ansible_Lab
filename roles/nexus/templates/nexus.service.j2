[Unit]
Description=Nexus Service
After=network.target

[Service]
Type=forking
LimitNOFILE=65536
ExecStart={{ nexus_install_dir }}/nexus-{{ nexus_version }}/bin/nexus start
ExecStop={{ nexus_install_dir }}/nexus-{{ nexus_version }}/bin/nexus stop
User=nexus
Restart=on-abort
TimeoutSec=600

[Install]
WantedBy=multi-user.target
