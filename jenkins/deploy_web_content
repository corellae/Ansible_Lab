node {
  def toDeploy = params.CONTENT.split(",").collect{"\"${it}\""}.join(",").replace(" ","")
  
  
  stage('checkout'){
    checkout scm
  }
  stage('listing'){
    sh "ls -l"
    sh "whoami"
  }
  stage('test ansible'){
    withCredentials([usernameColonPassword(credentialsId: '57d885a8-f5da-4db4-a049-fb116c442178', variable: '')]) {
      sh """ansible-playbook copy_web_files.yml -e '{ \"content\" : [${toDeploy}]}'"""
    }
  }
}
